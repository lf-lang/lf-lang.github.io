target C

import Deadline from "Deadline.lf"

preamble {=
  #include "platform.h"
=}

main reactor {
  logical action a
  d = new Deadline()

  reaction(startup) -> d.x, a {=
    lf_set(d.x, 0);
    lf_schedule(a, 0);
  =}

  reaction(a) -> d.x {=
    lf_set(d.x, 0);
    lf_sleep(MSEC(20));
  =}

  reaction(d.d) {=
    printf("Deadline reactor produced an output.\n");
  =}
}
