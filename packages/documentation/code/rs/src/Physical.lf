target Rust;
reactor Physical {
    input x:u32;
    physical action a;
    reaction(x) -> a {=
        let phys_action = a.clone();
        ctx.spawn_physical_thread(move |link| {
            link.schedule(&phys_action, Asap).unwrap();
        });
    =}
    reaction(a) {=
        println!(
            "Action triggered at logical time {} nsec after start.",
            ctx.get_elapsed_logical_time().as_nanos(),
        );
    =}
}