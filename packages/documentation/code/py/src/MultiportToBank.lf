target Python;
reactor Source {
    output[3] out;
    reaction(startup) -> out {=
        for i, port in enumerate(out):
            port.set(i)
    =}
}
reactor Destination(
    bank_index(0)
) {
    input inp;
    reaction(inp) {=
        print(f"Destination {self.bank_index} received {inp.value}.")
    =}
}

main reactor MultiportToBank {
    a = new Source();
    b = new[3] Destination();
    a.out -> b.inp;
}
